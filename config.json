{
	"content": {
		"name": "Home",
		"description": "A little corner of the internet",
		"style": "light",
		"scan_interval": 60
	},
	"authentication": {
		"disabled": true,
		"username": {
			"location": "env",
			"value": "BASTION_USERNAME"
		},
		"password": {
			"location": "env",
			"value": "BASTION_PASSWORD"
		}
	},
	"network": {
		"port": 4430,
		"tls": {
			"cert": "/etc/letsencrypt/live/www.bastionburrow.com/fullchain.pem",
			"key":  "/etc/letsencrypt/live/www.bastionburrow.com/privkey.pem"
		}
	}
}
